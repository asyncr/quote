<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_2</item>
        <item name="colorPrimaryVariant">@color/dark_1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_2</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/dark_1</item>

    </style>
    <style name="Quote">
        <item name="android:textColor">@color/purple_699</item>

    </style>
    <style name="Author">
        <item name="android:textColor">@color/gray_2</item>
    </style>

    <style name="Card">
        <item name="cardBackgroundColor">@color/dark_3</item>
    </style>

    <style name="floatingButton">
        <item name="android:background">@drawable/button_dark</item>
    </style>
    <style name="Navw">
        <item name="android:background">@color/dark_2</item>
    </style>
    <style name="Frag">
        <item name="android:background">@color/dark_1</item>
    </style>

    <style name="btnAdd">
        <item name="backgroundTint">@color/blue_1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tv">
        <item name="backgroundTint">#00FFFFFF</item>
        <item name="android:textColor">@color/purple_699</item>
        <item name="android:textColorHint">@color/gray_2</item>
    </style>

    <style name="StatusBar">
        <item name="android:statusBarColor">@color/dark_2</item>
    </style>

</resources>