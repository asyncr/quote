<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Frag"
    android:fillViewport="true"
    tools:context=".presentation.ui.fragments.delete.DeleteQuote">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edtNumberQuote"
            style="@style/Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:hint="Delete a quote by ID"
            android:inputType="number"
            android:lines="1"
            android:paddingVertical="15dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tvIDE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvIDE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_900"
            android:padding="4dp"
            android:lines="4"
            android:textSize="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnDeleteID"
            app:layout_constraintTop_toBottomOf="@+id/edtNumberQuote"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteID"
            style="@style/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="22dp"
            android:paddingVertical="14dp"
            android:text="Delete ID"
            app:cornerRadius="60dp"
            app:icon="@drawable/ic_search"
            app:iconTint="@color/white"
            android:layout_marginVertical="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIDE"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>