<resources>
    <!-- Base application theme. -->
    <style name="Theme.Quote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_900</item>
        <item name="colorPrimaryVariant">@color/purple_799</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white_900</item>
    </style>

    <style name="Quote">
        <item name="android:textColor">@color/dark_3</item>
    </style>

    <style name="Author">
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="Card">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="btnAdd">
        <item name="backgroundTint">@color/blue_1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tv">
        <item name="backgroundTint">#00FFFFFF</item>
        <item name="android:textColor">@color/purple_699</item>
        <item name="android:textColorHint">@color/gray_2</item>
    </style>
    <style name="Drawer">
        <item name="background">@color/white_900</item>
    </style>


    <style name="floatingButton">
        <item name="android:background">@drawable/button_light</item>
    </style>

</resources>