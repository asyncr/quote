<resources>
    <!-- Base application theme. -->
    <style name="Theme.Quote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black999</item>
        <item name="colorPrimaryVariant">@color/black999</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black999</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
    </style>

    <style name="drawer_header" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/black999</item>
    </style>
    <style name="Title">
        <item name="android:textColor">@color/black888</item>
    </style>
    <style name="Subtitle">
        <item name="android:textColor">@color/black880</item>
    </style>
    <style name="Card">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="Button">
        <item name="android:backgroundTint">@color/black999</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditText">
        <item name="android:backgroundTint">@color/black880</item>
    </style>
    <style name="Icon">
        <item name="android:background">@color/black999</item>
    </style>

    <style name="Theme.Quote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Quote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Quote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>